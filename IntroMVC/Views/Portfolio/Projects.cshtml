@model IEnumerable<IntroMVC.Models.Project>
@{
    ViewBag.Title = "Projects";
}

@Html.Partial("_Nav")

<h2>Projects & Portfolio</h2>

@foreach (var p in Model)
{
    <div class="project-card">
        <h3>@p.Title</h3>
        <p class="course">Course: @p.Course</p>
        <ul>
            @foreach (var d in p.Description)
            {
                <li>@d</li>
            }
        </ul>
        @if (!string.IsNullOrEmpty(p.LiveDemo) || !string.IsNullOrEmpty(p.GitHub))
        {
            <p>
                @if (!string.IsNullOrEmpty(p.LiveDemo))
                {
                    <a href="@p.LiveDemo" target="_blank">View Live Demo</a>
                }
                @if (!string.IsNullOrEmpty(p.LiveDemo) && !string.IsNullOrEmpty(p.GitHub))
                {
                    @: |
                }
                @if (!string.IsNullOrEmpty(p.GitHub))
                {
                    <a href="@p.GitHub" target="_blank">GitHub Repo</a>
                }
            </p>
        }
    </div>
}